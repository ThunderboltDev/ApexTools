{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "style": {
        "noMagicNumbers": "off",
        "useNodejsImportProtocol": "off"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/*.css",
      "!public",
      "!node_modules",
      "!dist",
      "!build",
      "!.vscode",
      "!.turbo",
      "!.next",
      "!.cursor",
      "!.env"
    ]
  }
}
